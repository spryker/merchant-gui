{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Edit Merchant' | trans ~ ': ' ~ idMerchant %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {%  for applicableMerchantStatus in applicableMerchantStatuses %}
        {% if applicableMerchantStatus == 'denied' %}
            {{ removeActionButton(url('/merchant-gui/status-merchant', {'status': applicableMerchantStatus, 'id-merchant': idMerchant}), applicableMerchantStatus | trans, {'icon':''}) }}
        {% else %}
            {{ createActionButton(url('/merchant-gui/status-merchant', {'status': applicableMerchantStatus, 'id-merchant': idMerchant}), applicableMerchantStatus | trans, {'icon':''}) }}
        {%  endif %}
    {%  endfor %}
    {{ backActionButton(url('/merchant-gui/list-merchant'), 'Back to Merchants' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}

            {{ form_start(form) }}
            {{ form_widget(form) }}

            <input type="submit" class="btn btn-primary safe-submit" value="{{ 'Save' | trans }}" />
            {{ form_end(form) }}

        {% endblock %}

    {% endembed %}

{% endblock %}
